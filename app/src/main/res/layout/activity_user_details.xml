<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.shraaboni.bloodbanknew.Activity.UserDetails">
    <TextView
        android:id="@+id/txt1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/blood_bank"
        android:gravity="center"
        android:textSize="30dp"
        android:layout_marginTop="30dp"
        android:textColor="@color/colorPrimaryDark"
        android:textStyle="bold"
        />
    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="User Verification Page"
        android:layout_gravity="center"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="40dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/phoneno"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:hint="Contact No" />

    <EditText
        android:id="@+id/specificarea"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:hint="Donation area" />

    <EditText
        android:id="@+id/donationdate"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:hint="Last donation date" />

    <EditText
        android:id="@+id/weight"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:textSize="15dp"
        android:hint="weight" />
    <Button
        android:id="@+id/button"
        android:onClick="goToMain"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Proceed to next page"
        android:textSize="18dp"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_gravity="right"
        android:layout_marginRight="40dp"
        android:background="@drawable/buttons"
        android:padding="20dp"/>
</LinearLayout>
